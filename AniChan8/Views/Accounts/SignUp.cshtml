
@{
    ViewBag.Title = "SignUp";
}

<h2>SignUp</h2>

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="../../img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Sign Up</h2>
                    <p>Welcome to AniChan.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Signup Section Begin -->            

<section class="signup spad">
    <div class="container">
        <div class="row">
            @if (ViewBag.showError == true)
            {
                <div class="alert alert-danger text-center" role="alert" >
                    <b>@ViewBag.errorMessage</b>
                    @{ViewBag.errorMessage = false;}
                </div>
            }
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Sign Up</h3>
                    @using (Html.BeginForm("SignUp", "Accounts"))
                    {
                        <div class="input__item">
                            <input type="text" placeholder="Email address" name="email">
                            <span class="icon_mail"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" placeholder="User Name" name="user_name">
                            <span class="icon_profile"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" placeholder="Password" name="password">
                            <span class="icon_lock"></span>
                        </div>
                        <input class="site-btn" type="submit" value="Register Now" />
                    }


                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Already Have An Account?</h3>
                    <a href="@Url.Action("Login","Accounts")" class="primary-btn">Go To Login</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Signup Section End -->
