
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="../../img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Login</h2>
                    <p>Welcome to AniChan.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Login Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row">
            @if (ViewBag.showMessage == true)
            {
                <div class="alert alert-success text-center" role="alert">
                    <b>@ViewBag.message</b>
                    @{ViewBag.showMessage = false;}
                </div>
            }
            @if (ViewBag.showError == true)
            {
                <div class="alert alert-danger text-center" role="alert">
                    <b>@ViewBag.errorMessage</b>
                    @{ViewBag.errorMessage = false;}
                </div>
            }
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Login</h3>
                    @using (Html.BeginForm("Login", "Accounts"))
                    {
                        <div class="input__item">
                            <input type="text" placeholder="User Name" name="username">
                            <span class="icon_profile"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" placeholder="Password" name="password">
                            <span class="icon_lock"></span>
                        </div>
                        <input class="site-btn" type="submit" value="Login" />
                    }
                    <a href="#" class="forget_pass">Forgot Your Password?</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Dontâ€™t Have An Account?</h3>
                    <a href="@Url.Action("SignUp","Accounts")" class="primary-btn">Register Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login Section End -->
